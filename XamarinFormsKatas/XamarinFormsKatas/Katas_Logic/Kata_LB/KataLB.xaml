<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_Logic.Kata_LB.KataLB">
    <ContentPage.Content>
        <ListView x:Name="listaVista">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Margin="8,0,0,0">
                            <Label Text="{Binding userId}" VerticalOptions="Center" FontSize="24" />
                            <Label Text="{Binding id}" VerticalOptions="Center" FontSize="24"/>
                            <Label Text="{Binding title}" VerticalOptions="Center" FontSize="24"/>
                            <Label Text="{Binding body}" VerticalOptions="Center" FontSize="24"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>