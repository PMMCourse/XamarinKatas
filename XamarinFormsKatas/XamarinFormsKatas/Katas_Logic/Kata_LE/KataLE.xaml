<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_Logic.Kata_LE.KataLE">
    <ContentPage.Content>
        <StackLayout Margin="8,0,8,0">
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Red" Text="{Binding Red}"
                   HorizontalOptions="FillAndExpand"
                   TextChanged="ColorTextChanged"/>
                <Entry Placeholder="Green" Text="{Binding Green}"
                   HorizontalOptions="FillAndExpand"
                   TextChanged="ColorTextChanged"/>
                <Entry Placeholder="Blue" Text="{Binding Blue}"
                   HorizontalOptions="FillAndExpand"
                   TextChanged="ColorTextChanged"/>
            </StackLayout>
            <BoxView WidthRequest="150" HeightRequest="150"
                     BackgroundColor="{Binding ResultColor}"
                     HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>