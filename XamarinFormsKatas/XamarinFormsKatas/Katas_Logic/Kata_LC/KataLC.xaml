<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_Logic.Kata_LC.KataLC">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="{Binding Texto}" WidthRequest="100" HeightRequest="60"/>
            <Button Text="Pulsar" Command="{Binding GenerarTexto}" WidthRequest="100" HeightRequest="100"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>