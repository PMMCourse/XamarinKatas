<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_e.KataE">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Image  Grid.Row="0" Source="{Binding image}" HorizontalOptions="Start"/>
            <Label  Grid.Row="0" Text="{Binding Tostring}" FontSize="Large" TextColor="White" Margin="80, 0, 0, 0"></Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>