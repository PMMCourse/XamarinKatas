<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_e.KataE">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemSelected = "ListView_ItemSelected"  VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" SeparatorColor="Black" IsPullToRefreshEnabled="False" x:Name="vistaLista">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid>
                          <Label Text="{Binding p}" FontAttributes="Bold" />
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>