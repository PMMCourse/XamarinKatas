<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_l.KataL">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" >
            <StackLayout.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Left" Swiped="swipeLeft"/>
                <SwipeGestureRecognizer Direction="Right" Swiped="SwipeRight"/>
                <TapGestureRecognizer Tapped="ControlTap"/>
                <PinchGestureRecognizer PinchUpdated="ControlPinch"/>
            </StackLayout.GestureRecognizers>
            <Label x:Name="Evento" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" FontSize="30"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>