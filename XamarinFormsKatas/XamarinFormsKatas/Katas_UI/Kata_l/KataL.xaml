<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_l.KataL">
    <ContentPage.Content>
        <StackLayout>
            <BoxView>
                <BoxView.GestureRecognizer>
                    <SwipeGestureRecognizer Direction="Left" Swiped="swiped_left"/>
                    <SwipeGestureRecognizer Direction="Right" Swiped="swiped_right"/>
                    <TapGestureRecognizer Tapped="tapPrincipal"/>
                    <PinchGestureRecognizer PinchUpdated="pinchPrincipal"/>
                </BoxView.GestureRecognizer>
            </BoxView>
            <Label x:Name="nameLabel" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>