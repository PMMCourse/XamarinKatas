<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_w.KataW">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal">
                <Entry WidthRequest="300" x:Name="entryControl"/>
                <Switch x:Name="switchEntry" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label WidthRequest="300" Text="Label" x:Name="labelControl"/>
                <Switch x:Name="switchLabel"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button WidthRequest="300" x:Name="buttonControl"/>
                <Switch x:Name="switchButton"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <ActivityIndicator IsVisible="True" IsEnabled="True" IsRunning="True" x:Name="activityControl"/>
                <Switch x:Name="switchActivity"/>
            </StackLayout>
            <Button VerticalOptions="Center" HorizontalOptions="Center" Text="Enviar" WidthRequest="200" Clicked="sendButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>