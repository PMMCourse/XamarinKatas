<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_s.KataS">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Width="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Height="*"/>
                </Grid.ColumnDefinitions>
                <BoxView BackgroundColor="Yellow" Grid.Row="0" Grid.Column="0"/>
                <BoxView BackgroundColor="Black" Grid.Row="0" Grid.Column="1"/>
                <BoxView BackgroundColor="Red" Grid.Row="1" Grid.Column="0"/>
                <BoxView BackgroundColor="Purple" Grid.Row="1" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>