<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_s.KataS">
    <ContentPage.Content>
        <StackLayout>
            <FlexLayout Direction="Row" VerticalOptions="FillAndExpand">
                <BoxView BackgroundColor="Red" FlexLayout.Grow="1"/>
                <BoxView BackgroundColor="Black" FlexLayout.Grow="1"/>
                
            </FlexLayout>
            <FlexLayout Direction="Row" VerticalOptions="FillAndExpand">
                <BoxView BackgroundColor="Orange" FlexLayout.Grow="1"/>
                <BoxView BackgroundColor="Green" FlexLayout.Grow="1"/>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>